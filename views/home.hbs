<div class="mt-5">
  <form action="/artist-search" method="GET">
    <div class="field has-addons">
      <div class="control">
        <input
          class="input"
          type="text"
          placeholder="Search for an user..."
          name="search"
        />
      </div>
      <div class="control">
        <button type="submit" class="button is-info">Search</button>
      </div>
    </div>
  </form>

